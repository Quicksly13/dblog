{% extends "page.html.twig" %} 

{% block javascripts %}
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-118881643-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-118881643-1');
    </script>

{% endblock javascripts %}

{% block navbar %}

<nav class="navbar sticky-top navbar-expand-lg navbar-principles justify-content-center">
    {# <div class="col-md-4 col-sm-3"> #}
        <a class=" dropdown-toggle" href={{ path('view_principles', {'title': title}) }} id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            {{title}}
        </a>
        <div class="dropdown-menu w-100 text-center nav-item bg-dark col-md-auto col-sm-auto" aria-labelledby="navbarDropdownMenuLink">
          {# Display all principle titles in the menu #}  
          {% for principle in principlesInMenu %}
              {% if principle == title %}
                <a class="dropdown-item nav-link " href={{ path('view_principles', {'title': principle}) }}>
                    <span class="">
                      {{principle}}
                    </span>
                </a>
              {% else %}
                <a class="dropdown-item nav-link" href={{ path('view_principles', {'title': principle}) }}>
                  {{principle}}
                </a>
              {% endif %}
          {% endfor %}
        </div>
    {#</div> #}
</nav>


{% endblock navbar %}

{% block content %}

{# <div class="container-fluid body-principles" style="margin-top:2em;margin-bottom:2em">} #}


  {# Display the explanation of the principle without stripping HTML tags used for formatting #}  
  {{ explanation|raw }}


{# </div> #}

<nav aria-label="principle navigation">
  <ul class="pagination justify-content-center principles-pagination">
    {% if previous is not null %}
      <li class="page-item">
        <a class="page-link" href={{ path('view_principles', {'title': previous}) }} aria-label="Previous">
          <span aria-hidden="true">&laquo; Previous</span>
          <span class="sr-only">Previous</span>
        </a>
      </li> 
    {% endif %}
    


    {% if next is not null %}
      <li class="page-item">
        <a class="page-link" href={{ path('view_principles', {'title': next}) }} aria-label="Next">
          <span aria-hidden="true">Next &raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    {% endif %}  
  </ul>
</nav>

{% endblock %}